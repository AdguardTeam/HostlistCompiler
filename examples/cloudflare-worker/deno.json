{
    "compilerOptions": {
        "lib": ["deno.worker"],
        "types": ["@cloudflare/workers-types"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "imports": {
        "@jk-com/adblock-compiler": "../../src/index.ts",
        "@cloudflare/workers-types": "npm:@cloudflare/workers-types@^4.20240405.0",
        "@luca/cases": "jsr:@luca/cases@^1.0.0",
        "@std/path": "jsr:@std/path@^1.0.0",
        "@std/fs": "jsr:@std/fs@^1.0.0",
        "@std/flags": "jsr:@std/flags@^0.224.0",
        "@std/assert": "jsr:@std/assert@^1.0.0",
        "@std/testing": "jsr:@std/testing@^1.0.0",
        "@std/async": "jsr:@std/async@^1.0.0"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "exclude": ["no-explicit-any", "no-console"]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true
    }
}
