{
    "name": "@jk-com/adblock-compiler",
    "version": "0.6.0",
    "exports": "./src/index.ts",
    "publish": {
        "include": ["src/**/*.ts", "README.md", "LICENSE"],
        "exclude": ["src/**/*.test.ts", "**/*.deno.ts"]
    },
    "tasks": {
        "dev": "deno run --watch --allow-read --allow-write --allow-net src/cli.ts",
        "compile": "deno run --allow-read --allow-write --allow-net src/cli.ts",
        "build": "deno compile --allow-read --allow-write --allow-net --output=hostlist-compiler src/cli.ts",
        "test": "deno test --allow-read --allow-write --allow-net --allow-env --unstable-kv",
        "test:watch": "deno test --allow-read --allow-write --allow-net --allow-env --unstable-kv --watch",
        "test:coverage": "deno test --allow-read --allow-write --allow-net --allow-env --unstable-kv --coverage=coverage",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check",
        "check": "deno check src/**/*.ts",
        "cache": "deno cache src/index.ts"
    },
    "imports": {
        "@/": "./src/",
        "@std/path": "jsr:@std/path@^1.0.0",
        "@std/fs": "jsr:@std/fs@^1.0.0",
        "@std/flags": "jsr:@std/flags@^0.224.0",
        "@std/assert": "jsr:@std/assert@^1.0.0",
        "@std/testing": "jsr:@std/testing@^1.0.0",
        "@std/async": "jsr:@std/async@^1.0.0",
        "tldts": "npm:tldts@^6.1.0"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo", "no-console"],
            "exclude": ["no-explicit-any"]
        },
        "exclude": ["dist/", "node_modules/", "coverage/"]
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "exclude": ["dist/", "node_modules/", "coverage/"]
    },
    "test": {
        "include": ["src/**/*_test.ts", "src/**/*.test.ts"]
    },
    "compilerOptions": {
        "lib": ["deno.window"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
