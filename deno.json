{
  "name": "@adguard/hostlist-compiler",
  "version": "1.0.40",
  "exports": "./src/index.ts",
  "tasks": {
    "dev": "deno run --watch src/cli.deno.ts",
    "compile": "deno run --allow-read --allow-write --allow-net src/cli.deno.ts",
    "test": "deno test --allow-read --allow-write --allow-net",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "check": "deno check src/**/*.ts"
  },
  "imports": {
    "@/": "./src/",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "lodash": "npm:lodash@^4.17.15",
    "tldts": "npm:tldts@^5.6.10"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo"
      ]
    },
    "exclude": [
      "dist/",
      "node_modules/"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "dist/",
      "node_modules/"
    ]
  },
  "test": {
    "include": [
      "test/**/*.test.ts"
    ]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}
